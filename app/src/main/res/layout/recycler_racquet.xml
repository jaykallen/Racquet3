<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/button_outline"
    android:layout_margin="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        tools:text="Head MicroGEL Radical Midplus" />

    <TextView
        android:id="@+id/headSizeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameText"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        tools:text="100 sq in" />

    <TextView
        android:id="@+id/weightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameText"
        android:layout_toEndOf="@id/headSizeText"
        android:paddingStart="10dp"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        tools:text="11.5 oz" />

    <TextView
        android:id="@+id/headWeightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameText"
        android:paddingStart="10dp"
        android:layout_toEndOf="@id/weightText"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        tools:text="8.0 pts HL" />


</RelativeLayout>